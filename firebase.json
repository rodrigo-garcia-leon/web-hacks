{
  "hosting": {
    "public": "./",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "functions",
      "firebase-debug.log", 
      "firebase.json",
      "LICENSE",
      "package-lock.json",
      "package.json",
      "README.md"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
      
    ],
    "rewrites": [
      {
        "source": "/api/jobs",
        "function": "getJobs"
      }
    ]
  }
}
